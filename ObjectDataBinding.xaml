<Window x:Class="DataBinding.ObjectDataBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ObjectDataBinding" Height="300" Width="300">
    <StackPanel>
        <TextBox Text="{Binding Path=Name}" Width="100" Margin="10,0,0,0"></TextBox>
        <Button Content="GetName" Width="100" Margin="10" Click="OnGetName_Click"></Button>
        <Button Content="SetName" Width="100" Margin="10" Click="OnSetName_Click"></Button>
        <Button Content="UpdateName" Width="100" Margin="10" Click="OnUpdateName_Click"></Button>
    </StackPanel>
</Window>
